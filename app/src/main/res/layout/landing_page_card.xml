<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_selector">

    <android.support.v7.widget.CardView
        android:id="@+id/landing_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:background="@color/colorPrimaryDark"
        card:cardCornerRadius="@dimen/card_landing_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/landing_page_card_view_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_landing_image_height"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/card_landing_image_margin"
                android:layout_marginRight="@dimen/card_landing_image_margin"
                android:layout_marginTop="@dimen/card_landing_image_margin"
                android:contentDescription="@string/landing_card_image_description" />

            <TextView
                android:id="@+id/landing_page_card_view_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/landing_page_card_view_image"
                android:layout_marginBottom="@dimen/card_landing_text_margin"
                android:layout_marginLeft="@dimen/card_landing_text_margin"
                android:layout_marginRight="@dimen/card_landing_text_margin"
                android:gravity="center|top"
                android:text="@string/landing_page_card_text_placeholder"
                android:textColor="@color/colorApp"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
