    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderPagerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_order_pager_view_pager"
